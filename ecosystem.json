{
  "apps": [
    {
      "name": "chula-youpin-web",
      "script": "index.js",
      "args": [],
      "no-daemon": false,

      "log_date_format" : "YYYY-MM-DD HH:mm",

      "watch": true,
      "ignore_watch": [
        "[\\/\\\\]\\./",
        ".git",
        "node_modules",
        "assets",
        "public",
        "data",
        "build"
      ],

      "min_uptime": 10000,
      "max_restarts": 2,

      "env": {
        "NODE_ENV": "local"
      },
      "env_development": {
        "NODE_ENV": "development"
      },
      "env_production": {
        "NODE_ENV": "production"
      }
    }
  ],
  "deploy" : {
    "production" : {
      "user" : "root",
      "host" : ["128.199.87.142"],
      "ref"  : "origin/chula",
      "repo" : "git@github.com:youpin-city/youpin-web.git",
      "path" : "/opt/chula/web.production",
      "post-deploy" : "cp ../shared/.env . && ln -fs `pwd`/config/production.json config/current.json && npm install && npm run build && pm2 startOrRestart ecosystem.json --env production",
      "pre-deploy-local" : "echo '[production] deploy completed.'"
    }
  }
}
